version: '3.2'

services:

  redis:
    build:
      context: .
      dockerfile: Dockerfile.redis
    image: mojp/pipelines-redis
    ports:
      - "6379:6379"
    volumes:
      - redis:/data
    deploy:
        replicas: 1
        restart_policy:
          condition: none

  db:
    build:
      context: .
      dockerfile: Dockerfile.db
    image: mojp/pipelines-db
    ports:
      - "5432:5432"
    environment:
      - "POSTGRES_PASSWORD="
    volumes:
      - db:/var/lib/postgresql/data
    deploy:
        replicas: 1
        restart_policy:
          condition: none

  app:
    build: .
    image: mojp/pipelines-app
    ports:
      - "5000:5000"
    # command: echo "app is disabled"
    depends_on:
      - db
      - redis
    environment:
      - "DPP_REDIS_HOST=redis"
      - "DPP_DB_ENGINE=postgresql://postgres:@db:5432/postgres"
      - "MOJP_ELASTICSEARCH_DB=10.240.0.7:9200"
      - "MOJP_ELASTICSEARCH_INDEX=next-mojp-dev"
      - "CLEARMASH_CLIENT_TOKEN="
    volumes:
      - data:/mojp/data
      - cache:/mojp/.cache
    deploy:
        replicas: 1
        restart_policy:
          condition: none

volumes:
  redis:
  db:
  data:
  cache:
